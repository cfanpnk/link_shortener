<% if notice %>
  <aside id="notice"><%= notice %></aside>
<% end %>

<%= form_with(model: @link, id: "create_link", class: "link_form", local: true) do |f| %>
  <dl>
    <dd>
      <%= f.text_field :original_link, placeholder: "Paste a URL to shorten it" %>
    </dd>
  </dl>
  <fieldset class="actions">
    <%= f.submit %>
    <input type="reset" value="Clear">
  </fieldset>
<% end %>
